#!/bin/sh
set -e

if [ "$1" = 'run' ]; then
  #enable apache modules
  IFS=', ' read -r -a array <<< "$APAMOD"
  for apael in "${apaarr[@]}"
  do
      a2enmod $apael
  done

  #install pecl mods
  IFS=', ' read -r -a array2 <<< "$PEAMOD"
  for peael in "${peaarr[@]}"
  do
      printf "\n" | pecl install $peael
  done

  #run other script (cron, modules, etc)
  if [ ! -f "$SHFILE" ]
  then
    echo "file not found"
  else
    chmod +x $SHFILE
    echo "run $SHFILE"
    $SHFILE
  fi

  #apply changes
  service apache2 restart
fi

#exec "$@"
